@using Service.Models

@{
  ViewBag.Title = "Home Page";
  Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IList<Article>
@if (Model == null || Model.Count() == 0)
{
  <p>No article has been published yet.</p>
}
else
{
  var wLead = @Model.Where(article => (bool)article.IsLead).FirstOrDefault();
  <div class="jumbotron">
    <h1>@Html.ActionLink(wLead.Title, "Article", new { articleId = wLead.Id })</h1>
    <h2>@wLead.Summary</h2>
    <p class="lead">@wLead.Content</p>
    <div>
      <img src="@Url.Action("ArticleImage", new { Id = wLead.Id })" border="0" class="img-thumbnail" />
    </div>
  </div>
  <div class="row">
    @for (var wIndex = 0; wIndex < Model.Count && wIndex < 10; wIndex++)
    {
      <div class="col-md-4">
        <h2>
          @Html.ActionLink(Model[wIndex].Title, "Article", new { articleId = Model[wIndex].Id })
        </h2>
        <h3>@Model[wIndex].Summary</h3>
        <div>
          <img src="@Url.Action("ArticleImage", new { Id = Model[wIndex].Id })" border="0" class="img-thumbnail" />
        </div>
      </div>
    }
  </div>
}
